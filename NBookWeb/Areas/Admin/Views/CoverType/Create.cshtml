@model CoverType



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Cover type</h2>
            <br/>
        </div>
    </div>
    @*<div asp-validation-summary="All"></div>*@
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
     
    <button type="submit" class="btn btn-secondary" style="width:100px">Create</button>
    <a asp-controller="CoverType" asp-action="Index" class="btn btn-outline-secondary" >Back to List</a>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

