@model NBook.Models.ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
        <div class="card  container pt-4 mb-0">
            <div class="card-header  ml-0  row ">
                <div class="col-lg-8 col-md-12 col-sm-12 ">
                    <h1 class="text-elegant-title pb-2">@Model.Product.Title</h1>
                    <p class="text-warning">by @Model.Product.Author</p>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 text-end pt-4">
                    <span class="badge bg-info pt-2" style="height:30px;">@Model.Product.CoverType.Name</span>
                    <span class="badge bg-warning pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body row container mb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-primary pb-2">List Price: <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                            </div>
                            <div class="row text-start pl-2">
                                <div class="p-1 col-3 price-border-bottom" >
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-3 price-border-bottom">
                                    <div>1-50</div>
                                </div>
                                <div class="p-1 col-3 price-border-bottom">
                                    <div>51-100</div>
                                </div>
                                <div class="p-1 col-3 price-border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-start pl-2" style="color:#FB9D2F; font-weight:bold">
                                <div class="p-1 col-3 price-border-bottom">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-3 price-border-bottom">
                                    <div>@Model.Product.Price.ToString("c")</div>
                                </div>
                                <div class="p-1 col-3 price-border-bottom">
                                    <div>@Model.Product.Price50.ToString("c")</div>
                                </div>
                                <div class="p-1 col-3 price-border-bottom">
                                    <div>@Model.Product.Price100.ToString("c")</div>
                                </div>
                            </div>
                            <div class="row pl-2 product-des-text">
                                <p class="col-sm-12 col-md-12">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2 d-flex justify-content-between align-items-center">
                                <div class="col-6 text-primary border border-primary"><h4 class=" p-3">Count</h4></div>
                                <div class="col-6"><input asp-for="Count" class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-3 offset-lg-1 text-center mx-auto pt-3 d-flex align-items-center">
                            <img src="@Model.Product.ImageUrl" style="width:100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 mb-4">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6">
                        <button type="submit" value="Add to Cart" class="btn linear-bg form-control text-orange" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>